<body>
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                HEROKU
            </a>
        </div>

        <div class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">
                    Inicio
                </a>
            </div>
        </div>
    </nav>
   

  <div class="container m-6 text-center ">
      <h1>CREAR TAREA</h1>
      <button type="button" class="btn btn-warning"><a href="user-create">Crear</a></button>
      
 </div>
    
    <div class="container m-6">
        <div class="columns">
            <div class="column">
                <h3 class="text-center" >Listado de Tareas</h3>
                <div class="card mt-6">
                    <div class="card-content">
                        <div class="content">
                            
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>username</th>
                                        <th>email</th>
                                        <th>contraseña</th>
                                         <th>Fecha</th>
                                         <th>ELIMINAR</th>

                                    </tr>
                                </thead>
                                <tbody>
                                {{#each user}}
                                    <tr>
                                        <th>{{this.id}}</th>
                                        <td>{{this.username}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.contraseña}}</td>
                                        <td>{{this.fecha}}</td>
                                         <td><a href="user-delete/{{id}}" class="btn btn-danger">ELIMINAR</a></td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    
</body>

</html>